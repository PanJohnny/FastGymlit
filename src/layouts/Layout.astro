---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="dark">
			<h1>{title}</h1>
			<nav>
				<a href="/">Hlavní stránka</a>
				<a href="/novinky">Novinky</a>
				<a href="https://bakalari.gymlit.cz">Bakaláři</a>
				<a href="https://www.strava.cz/strava5/Jidelnicky?zarizeni=0837&Tisk=true">Jídelníček</a>
				<a href="https://www.youtube.com/@TVGymlitPrague">TV Gymlit</a>
				<a href="https://skola.tritius.cz/library/gymlit">Knihovna</a>
			</nav>
		</header>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--default-font-size: 1em;
		--font-color: rgb(37, 37, 37);
	}

	body {
		margin: 0px;
		width: 100%;
		height: 100%;
		font-family: "Poppins", sans-serif;
		font-size: var(--default-font-size);
		background-color: rgb(242, 242, 242);
		color: var(--font-color);
	}

	header {
		margin-top: 0px;
		margin-bottom: 2em;
		width: 100%;
		text-align: center;
	}

	header > * {
		padding-bottom: 0.2em;
		border-bottom: 1px solid var(--font-color);
	}

	@media (prefers-color-scheme: dark) {
		body {
			background-color: rgb(37, 37, 37);
			color: rgb(242, 242, 242);
			--font-color: rgb(242, 242, 242);
		}
	}

	nav {
		display: flex;
		justify-content: space-evenly;
		width: 100%;
		flex-direction: row;
	}

	nav > a {
		color: var(--font-color);
		text-decoration: none;
	}

	main {
		margin: 2em;
	}
</style>
