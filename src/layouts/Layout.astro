---
export interface Props {
	title: string;
	noShout?: boolean;
}

const { title, noShout } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="stylesheet"
			href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
		/>
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1
				title={noShout
					? "Titulek předělaný, aby učitel nepoužíval jen capslock (může obsahovat chyby)"
					: "Titulek článku"}
				set:html={title}
			/>
			<nav>
				<a href="/" id="nav-home" title="Hlavní stránka"></a>
				<a href="/novinky" id="nav-news" title="Novinky"></a>
				<a
					href="/uspechy-skoly"
					id="nav-accomplishments"
					title="Úspěchy školy"></a>
				<a
					href="https://bakalari.gymlit.cz"
					id="nav-baka"
					title="Bakaláři"></a>
				<a
					href="https://www.strava.cz/strava5/Jidelnicky?zarizeni=0837&Tisk=true"
					id="nav-food"
					title="Jídelníček"></a>
				<a
					href="https://skola.tritius.cz/library/gymlit"
					id="nav-lib"
					title="Knihovna"></a>
				<a href="/info" id="nav-info" title="Informace o stránce"></a>
			</nav>
		</header>
		<slot />
		<footer>
			<div class="siteinfo">
				Vytvořil <a href="https://github.com/PanJohnny"
					>Honza ♥</a
				>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	a {
		color: inherit;
	}

	code {
		font-family: "Courier New", Courier, monospace;
	}

	body {
		font-family: "Poppins", sans-serif;
	}

	header {
		text-align: center;
	}

	header > * {
		padding-bottom: 0.2em;
		border-bottom: 1px solid var(--font-color);
		margin-right: 0px;
	}

	@media (prefers-color-scheme: dark) {
		body {
			--image-icon-filter: invert(1);
		}
	}

	nav {
		display: flex;
		justify-content: space-evenly;
		width: 100%;
		flex-direction: row;
	}

	nav > a {
		color: var(--font-color);
		text-decoration: none;
		font-size: 1.5em;
	}

	main {
		margin: 1em;
	}

	.left-foot {
		position: fixed;
		left: 0.3em;
		bottom: 0.3em;
	}

	.siteinfo {
		position: fixed;
		bottom: 0.3em;
		right: 0em;
		padding: 0.2em;
		padding-right: 0.3em;
		font-size: larger;
		background-color: var(--background-color);
		border: solid var(--font-color) 1px;
		border-radius: 2px;
	}

	nav > a::before {
		content: "";
		font-size: initial;
		display: inline-block;
		width: var(--default-font-size);
		height: var(--default-font-size);
		background: no-repeat;
		filter: var(--image-icon-filter);
		width: 2em;
		height: 2em;
	}

	#nav-home::before {
		background-image: url("/icons/house.svg");
	}

	#nav-news::before {
		background-image: url("/icons/news.svg");
	}

	#nav-baka::before {
		background-image: url("/icons/graduation_cap.svg");
	}

	#nav-food::before {
		background-image: url("/icons/utensils.svg");
	}

	#nav-accomplishments::before {
		background-image: url("/icons/trophy.svg");
	}

	#nav-lib::before {
		background-image: url("/icons/book.svg");
	}

	#nav-info::before {
		background-image: url("/icons/info.svg");
	}

	img {
		max-width: 80vw;
		height: auto;
	}
</style>
