---
interface Props {
    title: string;
    src: string;
    href: string;
    size?: number;
    ariaHidden?: boolean;
}

const { title, src, href, size, ariaHidden} = Astro.props;
---

<a href={href} title={title} style={"--icon-src: url(/icons" + src + "); --size: " + (size?size:1) + "em;"} aria-hidden={ariaHidden}></a>

<style type="scss">
    a {
        color: black;
        text-decoration: none;
        font-size: 1.5em;

        &::before {
            content: "";
            font-size: initial;
            display: inline-block;
            width: var(--size);
            height: var(--size);
            background: no-repeat;
            background-image: var(--icon-src);
        }
    }

    @media (min-width: 1200px) {
        
    }
</style>
